# Force HTTPS

RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Allow access to main index.php (the web interface)

<Files "index.php">
    Require all granted
</Files>

# Allow access to favicon

<Files "favicon.ico">
    Require all granted
    Header set Cache-Control "max-age=2592000, public"
</Files>

# Allow access to public directory files and set caching
<FilesMatch "^public/.*\.(css|js|ico|png|jpg|jpeg|gif|svg)$">
    Require all granted
    Header set Cache-Control "max-age=2592000, public"
</FilesMatch>

# Allow access to all files in public directory
<FilesMatch "^public/">
    Require all granted
</FilesMatch>

# Allow access to docs directory files and set caching
<FilesMatch "^docs/.*\.(pdf|txt|doc|docx|xls|xlsx|ppt|pptx)$">
    Require all granted
    Header set Cache-Control "max-age=2592000, public"
</FilesMatch>

# Allow access to all files in docs directory
<FilesMatch "^docs/">
    Require all granted
</FilesMatch>

# Allow access to images directory files and set caching
<FilesMatch "^images/.*\.(jpg|jpeg|png|gif|webp|svg|mov)$">
    Require all granted
    Header set Cache-Control "max-age=2592000, public"
</FilesMatch>

# Allow access to all files in images directory
<FilesMatch "^images/">
    Require all granted
</FilesMatch>

# Explicitly deny access to sensitive files and directories
<FilesMatch "^src/">
    Require all denied
</FilesMatch>

<FilesMatch "^config/">
    Require all denied
</FilesMatch>

<Files ".env*">
    Require all denied
</Files>

<Files "setup.php">
    Require all denied
</Files>

<Files "*.example">
    Require all denied
</Files>

<Files "package.json">
    Require all denied
</Files>

<Files "README.md">
    Require all denied
</Files>

<Files ".gitignore">
    Require all denied
</Files>

<Files ".htaccess">
    Require all denied
</Files>

# Security headers

<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>
